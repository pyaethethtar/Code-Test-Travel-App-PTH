<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:fontFamily">@font/chivo_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_regular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:fontFamily">@font/chivo_regular</item>
    </style>

    <style name="text_label">
        <item name="android:textColor">@color/label_gray</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/chivo_bold</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.TranslucentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>